{
    "$schema": "http://json-schema.org/draft-03/schema#",

    "definitions": {},
    "properties": {
        "creators": {
            "items": {
                "id": "/properties/creators/items",
                "type": "string"
            },
            "type": "array"
        },
        "date_published": {
            "pattern": "\\d{2}/\\d{2}/\\d{4}",
            "type": "string",
            "error": {
                "pattern": "This is not a valid date value."
            }
        },
        "description": {
            "maxLength": 200,
            "minLength": 100,
            "type": "string"
        },
        "end_date": {
            "pattern": "\\d{2}/\\d{2}/\\d{4}",
            "type": "string",
            "error": {
                "pattern": "This is not a valid date value."
            }
        },
        "files": {
            "items": {
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ],
                "type": "object"
            },
            "type": "array",
            "minItems": 1
        },
        "report_type": { "$ref": "report_type.json#/report_type" },
        "start_date": {
            "pattern": "\\d{2}/\\d{2}/\\d{4}",
            "type": "string",
            "error": {
                "pattern": "This is not a valid date value."
            }
        },
        "subjects": { "$ref": "subjects.json#/subjects" },
        "subtitle": {
            "maxLength": 150,
            "type": "string"
        },
        "title": {
            "maxLength": 150,
            "type": "string"
        },
        "year": {
            "minimum": 1600,
            "type": "integer"
        },
        "year_type": {
            "type": "string"
        }
    },
    "required": [
        "files",
        "agency",
        "description",
        "title",
        "date_published",
        "subjects",
        "report_type",
        "year_type"
    ],
    "anyOf": [
        {
            "required": [
                "year"
            ]
        },
        {
            "required": [
                "end_date",
                "start_date"
            ]
        }
    ],
    "type": "object"
}